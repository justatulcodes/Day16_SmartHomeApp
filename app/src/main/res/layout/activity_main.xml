<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_10sdp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="Morning,"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="George"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

    <ImageButton
        android:id="@+id/ib_menu_btn"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/circle_shape"
        android:paddingVertical="@dimen/_10sdp"
        android:src="@drawable/menu_dots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


    <TextView
        android:id="@+id/tv_weather_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/weather_data"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_menu_btn" />

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/datetime_data"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_weather_details" />

    <ScrollView
        android:id="@+id/sv_tiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableLayout
                android:id="@+id/tl_primary_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="20">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_weight="11"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/light_blue"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <ImageButton
                            android:id="@+id/ib_key_btn"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/white"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/key"
                            app:tint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>


                        <TextView
                            android:id="@+id/tv_door_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/front_door"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ib_key_btn" />

                        <TextView
                            android:id="@+id/tv_door_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/door_stats"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_door_name" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardElevation="@dimen/_5sdp"
                            android:layout_margin="@dimen/_3sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp">

                                <ImageButton
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/circle_shape"
                                    android:paddingVertical="@dimen/_10sdp"
                                    android:src="@drawable/lock"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/white" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:src="@drawable/swipe" />

                                <ImageButton
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/circle_shape"
                                    android:backgroundTint="@color/white"
                                    android:paddingVertical="@dimen/_10sdp"
                                    android:src="@drawable/unlock"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/black" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="0dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_weight="9"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tv_add_modules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/add_edit_modules"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/tv_new_modules_eg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/modules_example"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_add_modules" />

                        <ImageButton
                            android:id="@+id/ib_settings"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/settings"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/ib_add"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/add_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:tint="@color/white" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </TableRow>

                <Space android:layout_height="@dimen/_5sdp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="20">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_weight="11"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <FrameLayout
                            android:id="@+id/fl_contacts_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/white"
                                android:paddingVertical="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_100sdp"
                                app:tint="@color/black">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/raleway_bold"
                                    android:text="SB"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/circle_shape"
                                android:layout_marginStart="@dimen/_25sdp"
                                android:backgroundTint="@color/light_green"
                                android:paddingVertical="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_100sdp"
                                app:tint="@color/black">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/raleway_bold"
                                    android:text="GS"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/light_red"
                                android:paddingVertical="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_100sdp"
                                app:tint="@color/black">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/raleway_bold"
                                    android:text="RB"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginStart="@dimen/_75sdp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="@color/light_purple"
                                android:paddingVertical="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_100sdp"
                                app:tint="@color/black">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/raleway_bold"
                                    android:text="PS"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp" />
                            </androidx.cardview.widget.CardView>




                        </FrameLayout>



                        <TextView
                            android:id="@+id/tv_family"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/family"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toTopOf="@id/tv_member_count"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/_4_members"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageButton
                            android:id="@+id/ib_add_btn"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/add_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:tint="@color/white" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/ll_light_box"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_weight="9"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <ImageButton
                            android:id="@+id/ib_light_btn"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/sun"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:tint="@color/white" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_office_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/office_light"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:id="@+id/tv_office_light_off_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="@string/off"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />


                    </LinearLayout>


                </TableRow>


            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_appliance_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_primary_row" />

            <TableLayout
                android:id="@+id/tl_secondary_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <ImageButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/monitor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/ib_open_tv_settings"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/arrow_outward"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />


                        <TextView
                            android:id="@+id/tv_TV_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/smart_tv"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ib_open_tv_settings" />

                        <TextView
                            android:id="@+id/tv_specs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text='@string/tv_specs'
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_TV_name" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@null"
                            android:ellipsize="start"
                            android:scaleX="1.8"
                            android:scaleY="1.8"
                            android:thumb="@drawable/custom_thumb"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:thumbTint="@color/light_green"
                            app:track="@drawable/custom_track"
                            app:trackTint="@color/secondary_surface" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="0dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <ImageButton
                            android:id="@+id/ib_thermostat"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/thermometer"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />


                        <TextView
                            android:id="@+id/tv_thermostat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/thermostat"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ib_thermostat" />

                        <TextView
                            android:id="@+id/tv_thermostat_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text='@string/_24'
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_thermostat" />


                        <ImageButton
                            android:id="@+id/ib_increase_temp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/add"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:tint="@color/white" />


                        <ImageButton
                            android:id="@+id/ib_decrease_temp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/minus"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ib_increase_temp"
                            app:tint="@color/white" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </TableRow>

                <Space android:layout_height="@dimen/_5sdp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_shape"
                        android:backgroundTint="@color/primary_surface"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <ImageButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/wifi"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/ib_open_wifi_settings"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/secondary_surface"
                            android:paddingVertical="@dimen/_10sdp"
                            android:src="@drawable/arrow_outward"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />


                        <TextView
                            android:id="@+id/tv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/wifi"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ib_open_wifi_settings" />

                        <TextView
                            android:id="@+id/tv_connection_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:text='@string/on_upc1192'
                            android:textColor="@color/white"
